<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:gravity="center"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:id="@+id/cache" />

        <EditText android:id="@+id/calculator_bar"
            android:gravity="end|center_vertical"
            android:cursorVisible="false"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:paddingRight="10dp"
            android:inputType="number|numberSigned|numberDecimal"
            android:ems="20"
            android:background="@drawable/calculator_bar"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:onClick="type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ( "
                android:id="@+id/rp" />

            <Button
                android:onClick="type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ) "
                android:id="@+id/lp" />

            <Button
                android:onClick="type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:id="@+id/percent" />

            <Button
                android:onClick="ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AC"
                android:id="@+id/ac" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:onClick="type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/seven" />

            <Button
                android:onClick="type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/eight" />

            <Button
                android:onClick="type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/nine" />

            <Button
                android:onClick="type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:id="@+id/divide" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:onClick="type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/four" />

            <Button
                android:onClick="type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/five" />

            <Button
                android:onClick="type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/six" />

            <Button
                android:onClick="type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" x "
                android:id="@+id/multiply" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:onClick="type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/one" />

            <Button
                android:onClick="type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/two" />

            <Button
                android:onClick="type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/three" />

            <Button
                android:onClick="type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:id="@+id/minus" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:onClick="type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/zero" />

            <Button
                android:onClick="type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:id="@+id/point" />

            <Button
                android:onClick="equals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" = "
                android:id="@+id/equals" />

            <Button
                android:onClick="type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" + "
                android:id="@+id/plus" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
